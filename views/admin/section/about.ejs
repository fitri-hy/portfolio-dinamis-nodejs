<%- include('../partials/head') %>
<%- include('../components/navbar') %>
<main class="flex flex-col gap-4 lg:ml-64 lg:pl-4 lg:w-75% mt-6 mx-4 mb-12">
	
<div id="featured" class="flex flex-col gap-2 bg-slate-800 rounded-md px-4 py-6">
    <h2 class="mb-6 font-extrabold text-2xl text-gray-200">About Settings</h2>
    <form action="/admin/edit-about" method="POST" enctype="multipart/form-data">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col gap-2">
                <label for="span_title">About Category<span class="text-rose-600">*</span></label>
                <input type="text" id="span_title" name="span_title" value="<%= jsonData.about.span_title %>" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
            <div class="flex flex-col gap-2">
                <label for="title">About Title<span class="text-rose-600">*</span></label>
                <input type="text" id="title" name="title" value="<%= jsonData.about.title %>" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
            <div class="flex flex-col gap-2">
                <label for="subtitle">About Description<span class="text-rose-600">*</span></label>
                <textarea type="text" id="subtitle" name="subtitle" class="p-2 rounded-md bg-slate-900 text-gray-200" required><%= jsonData.about.subtitle %></textarea>
            </div>
            <div class="flex flex-col gap-2">
                <label for="images">About Images<span class="text-rose-600">*</span></label>
				<img class="h-36 w-40 object-cover rounded-md" src="/images/uploads/<%= jsonData.about.images %>">
                <input type="file" id="images" name="images" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
        </div>
        <input type="submit" value="Save" class="mt-4 px-4 py-2 bg-blue-700 text-gray-200 rounded-lg hover:bg-blue-600">
    </form>
    <h2 class="mt-12 font-extrabold text-2xl text-gray-200">Add List</h2>
    <form action="/admin/add-about-list" method="POST">
        <div class="grid grid-cols-1 gap-4">
            <div class="flex flex-col gap-2">
                <label for="title">Title<span class="text-rose-600">*</span></label>
                <input type="text" id="title" name="title" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
        </div>
        <input type="submit" value="Add" class="mt-4 px-4 py-2 bg-emerald-600 text-gray-200 rounded-lg hover:bg-emerald-700">
    </form>
    <div class="overflow-x-auto">
        <table class="table-auto min-w-full mt-6">
            <thead>
                <tr class="bg-slate-700">
                    <th class="px-4 py-2 text-left">Title</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>
            <tbody class="w-full">
                <% jsonData.about.about_list.forEach(function(data) { %>
                    <tr class="border-b border-gray-700">
                        <td class="px-4 py-2 w-full">
                            <p class="line-clamp-1"><%= data.title %></p>
                        </td>
                        <td class="px-4 py-2 flex items-center justify-center" style="min-width: 200px;">
                            <form action="/admin/delete-about-list/<%= data.id %>" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="px-4 py-2 bg-rose-700 text-gray-200 rounded-lg text-center hover:bg-rose-600">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>								
            </tbody>
        </table>
    </div>
	
	<h2 class="mt-12 font-extrabold text-2xl text-gray-200">Add Count Number</h2>
    <form action="/admin/add-about-count" method="POST">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <div class="flex flex-col gap-2">
                <label for="count">Count Number<span class="text-rose-600">*</span></label>
                <input type="text" id="count" name="count" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
			<div class="flex flex-col gap-2">
                <label for="title">Title<span class="text-rose-600">*</span></label>
                <input type="text" id="title" name="title" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
        </div>
        <input type="submit" value="Add" class="mt-4 px-4 py-2 bg-emerald-600 text-gray-200 rounded-lg hover:bg-emerald-700">
    </form>
    <div class="overflow-x-auto">
        <table class="table-auto min-w-full mt-6">
            <thead>
                <tr class="bg-slate-700">
                    <th class="px-4 py-2 text-left">Count</th>
                    <th class="px-4 py-2 text-left">Title</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>
            <tbody class="w-full">
                <% jsonData.about.about_count.forEach(function(data) { %>
                    <tr class="border-b border-gray-700">
                        <td class="px-4 py-2 min-w-[200px]">
                            <p class="line-clamp-1"><%= data.count %></p>
                        </td>
                        <td class="px-4 py-2 w-full">
                            <p class="line-clamp-1"><%= data.title %></p>
                        </td>
                        <td class="px-4 py-2 flex items-center justify-center" style="min-width: 200px;">
                            <form action="/admin/delete-about-count/<%= data.id %>" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="px-4 py-2 bg-rose-700 text-gray-200 rounded-lg text-center hover:bg-rose-600">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>								
            </tbody>
        </table>
    </div>
</div>

</main>
<%- include('../partials/footer') %>