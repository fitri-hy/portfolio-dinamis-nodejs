<%- include('../partials/head') %>
<%- include('../components/navbar') %>
<main class="flex flex-col gap-4 lg:ml-64 lg:pl-4 lg:w-75% mt-6 mx-4 mb-12">

<div id="services" class="flex flex-col gap-2 bg-slate-800 rounded-md px-4 py-6">
    <h2 class="mb-6 font-extrabold text-2xl text-gray-200">Services Settings</h2>
    <form action="/admin/edit-services" method="POST">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col gap-2">
                <label for="span_title">Services Category<span class="text-rose-600">*</span></label>
                <input type="text" id="span_title" name="span_title" value="<%= jsonData.services.span_title %>" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
            <div class="flex flex-col gap-2">
                <label for="title">Services Title<span class="text-rose-600">*</span></label>
                <input type="text" id="title" name="title" value="<%= jsonData.services.title %>" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
            <div class="flex flex-col gap-2">
                <label for="subtitle">Services Description<span class="text-rose-600">*</span></label>
                <textarea type="text" id="subtitle" name="subtitle" class="p-2 rounded-md bg-slate-900 text-gray-200" required><%= jsonData.services.subtitle %></textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="mt-4 px-4 py-2 bg-blue-700 text-gray-200 rounded-lg hover:bg-blue-600">
    </form>
    <h2 class="mt-12 font-extrabold text-2xl text-gray-200">Add Services</h2>
    <form action="/admin/add-services" method="POST">
        <div class="grid grid-cols-2 gap-4">
            <div class="flex flex-col gap-2">
                <label for="title">Title<span class="text-rose-600">*</span></label>
                <input type="text" id="title" name="title" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
            <div class="flex flex-col gap-2">
                <label for="icon">Icon<span class="text-rose-600">*</span></label>
                <input type="text" id="icon" name="icon" class="p-2 rounded-md bg-slate-900 text-gray-200" required>
            </div>
        </div>
        <div class="flex flex-col gap-2">
			<label for="subtitle">Description<span class="text-rose-600">*</span></label>
			<textarea type="text" id="subtitle" name="subtitle" class="p-2 rounded-md bg-slate-900 text-gray-200" required></textarea>
		</div>
        <input type="submit" value="Add" class="mt-4 px-4 py-2 bg-emerald-600 text-gray-200 rounded-lg hover:bg-emerald-700">
    </form>
    <div class="overflow-x-auto">
        <table class="table-auto min-w-full mt-6">
            <thead>
                <tr class="bg-slate-700">
                    <th class="px-4 py-2 text-left">Icon</th>
                    <th class="px-4 py-2 text-left">Title</th>
                    <th class="px-4 py-2 text-left">Description</th>
                    <th class="px-4 py-2">Action</th>
                </tr>
            </thead>
            <tbody class="w-full">
                <% jsonData.services.services_card.forEach(function(data) { %>
                    <tr class="border-b border-gray-700">
						<td class="px-4 py-2">
                            <p class="line-clamp-1"><%= data.icon %></p>
                        </td>
                        <td class="px-4 py-2">
                            <p class="line-clamp-1"><%= data.title %></p>
                        </td>
                        <td class="px-4 py-2">
                            <p class="line-clamp-1"><%= data.subtitle %></p>
                        </td>
                        <td class="px-4 py-2 flex items-center justify-center" style="min-width: 200px;">
                            <form action="/admin/delete-services/<%= data.id %>" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="px-4 py-2 bg-rose-700 text-gray-200 rounded-lg text-center hover:bg-rose-600">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>								
            </tbody>
        </table>
    </div>
</div>

</main>
<%- include('../partials/footer') %>